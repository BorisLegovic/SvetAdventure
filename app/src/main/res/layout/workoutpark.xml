<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:animateLayoutChanges="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bluemain"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="40dp"
            android:id="@+id/show_park"
            android:layout_height="fill_parent"
            android:onClick="show_park"
            android:gravity="center"
            >
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="9dp"
            android:layout_height="25dp"
            android:src="@drawable/workout"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Workout park"
            android:id="@+id/textView2"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapPark"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        tools:context="com.example.boris.svetadventureapp.MapsActivity"
        tools:layout="@layout/abc_action_bar_title_item"
        android:layout_gravity="center"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/bluemain" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="9dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/bluemain"
            android:layout_height="wrap_content"
            android:text="@string/exercize_list"
            />
    </LinearLayout>

<ScrollView
    android:animateLayoutChanges="true"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    >

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout6"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView15"
            android:background="@drawable/minizid"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/textView22"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView16"
            android:background="@drawable/circleblue"
            android:layout_alignTop="@+id/textView22"
            android:layout_toStartOf="@+id/textView22"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mini wall"
            android:id="@+id/textView21"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_alignBottom="@+id/imageView15"
            android:layout_toEndOf="@+id/imageView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Adrenalin children "
            android:id="@+id/textView22"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout7"
        android:background="#ffffff"
        android:layout_below="@+id/relativeLayout6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView17"
            android:background="@drawable/poligonguma"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/textView24"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView18"
            android:background="@drawable/yellowcircle"
            android:layout_alignTop="@+id/textView24"
            android:layout_toStartOf="@+id/textView24"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tire poligon"
            android:id="@+id/textView23"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_alignBottom="@+id/imageView17"
            android:layout_toEndOf="@+id/imageView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Strength &amp; condition"
            android:id="@+id/textView24"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout8"
        android:background="#ffffff"
        android:layout_below="@+id/relativeLayout7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView24"
            android:background="@drawable/balancelog"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView25"
            android:background="@drawable/realyellow"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/textView31"
            android:layout_toStartOf="@+id/textView31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Balance log"
            android:id="@+id/textView30"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_alignTop="@+id/imageView25"
            android:layout_toEndOf="@+id/imageView24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Black palm"
            android:id="@+id/textView31"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout9"
        android:background="#ffffff"
        android:layout_below="@+id/relativeLayout8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView19"
            android:background="@drawable/medvjedjihod"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView20"
            android:background="@drawable/redcircle"
            android:layout_alignTop="@+id/textView26"
            android:layout_toStartOf="@+id/textView26"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bear walk"
            android:id="@+id/textView25"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_alignTop="@+id/imageView20"
            android:layout_toEndOf="@+id/imageView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dog agility"
            android:id="@+id/textView26"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>


</RelativeLayout>


</ScrollView>



<LinearLayout
    android:animateLayoutChanges="true"
    android:layout_width="wrap_content"
    android:id="@+id/all_workouts"
    android:layout_height="wrap_content"
    android:visibility="visible">
    <ImageView
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:id="@+id/workoutimageid"
        android:layout_alignParentStart="false"
        android:src="@drawable/fitness"
        android:background="#ffffff" />
</LinearLayout>




</LinearLayout>